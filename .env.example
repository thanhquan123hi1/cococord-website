# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=cococord_mysql
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_mysql_password_here

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=cococord_mongo

# Redis Configuration
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Email Configuration (Gmail)
# Để lấy App Password cho Gmail:
# 1. Vào https://myaccount.google.com/security
# 2. Bật "2-Step Verification"
# 3. Tìm "App passwords" và tạo password mới cho ứng dụng
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_16_character_app_password_here

# JWT Configuration
# Tạo JWT secret bằng lệnh: openssl rand -base64 64
JWT_SECRET=change-this-to-a-secure-random-string-minimum-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Cloudinary Configuration
# Đăng ký miễn phí tại: https://cloudinary.com/
# Lấy credentials từ Dashboard -> Settings -> Access Keys
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Admin User Seeder
# Tài khoản admin mặc định sẽ được tạo khi chạy ứng dụng lần đầu
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@cococord.local
ADMIN_PASSWORD=change_this_password
ADMIN_SEED_ENABLED=true

# Application Configuration
APP_NAME=CoCoCord
APP_FRONTEND_URL=http://localhost:8080
APP_UPLOAD_MAX_FILE_SIZE=10485760
